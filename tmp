#include <stdio.h>
#include <string.h>
#include "libft.h"

#define OK "\033[32m[OK]\033[39m"
#define KO "\033[31m[KO]\033[39m"

int	g_case = 1;
int	g_detail = 1;

void	check(char *description, int b, ...)
{
	printf("CASE %d [%s] %s\n", g_case++, description, b ? OK : KO);
}

#define STRRCHR(s, c) ft_strrchr(s, c) == strrchr(s, c) 

int	main(void)
{
	check("Match head", STRRCHR("42Tokyo", '4'));
	check("Match i=2", STRRCHR("42Tokyo", 'T'));
	check("Out of range", STRRCHR("yuki", 257));
	// check(ft_strrchr("yuki", 0) == strrchr("yuki", 0));
	// check(ft_strrchr("yuki", 257) == strrchr("yuki", 257));
}